rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - private, only the user can access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User's bank accounts subcollection - private
      match /bankAccounts/{accountId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Shared accounts collection - public read for QR scanning
    // Only authenticated users can write
    match /sharedAccounts/{accountId} {
      allow read: if true; // Anyone can read (for QR scanning)
      allow create: if request.auth != null; // Only authenticated users can create
      allow update, delete: if request.auth != null && 
                            request.auth.uid == resource.data.userId; // Only owner can update/delete
    }
    
    // Shareable accounts collection - for admin-generated links
    // Public read, only authenticated users can create
    match /shareableAccounts/{accountId} {
      allow read: if true; // Anyone can read (for claim links)
      allow create: if request.auth != null; // Only authenticated users (admin) can create
      allow update, delete: if request.auth != null && 
                            request.auth.uid == resource.data.createdBy; // Only creator can modify
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
